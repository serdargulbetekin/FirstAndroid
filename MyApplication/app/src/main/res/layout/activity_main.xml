<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bitmap" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/activityMain_editText_accountNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hesap No"
            android:textColor="@color/azure"
            android:textColorHint="@color/azure"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/activityMain_editText_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:hint="Kullanıcı Kodu"
            android:textColor="@color/azure"
            android:textColorHint="@color/azure"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/activityMain_editText_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:hint="Parola"
            android:textColor="@color/azure"
            android:textColorHint="@color/azure"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp">


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giriş bilgilerimi hatırla"
            android:textColor="@color/white"
            android:textSize="16sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="23dp">


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Risk bildirim formunu onaylıyorum"
            android:textColor="@color/white"
            android:textSize="16sp" />


    </LinearLayout>

    <Button
        android:id="@+id/activity_main_button_signIn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="23dp"
        android:background="@color/azure"
        android:text="KAMERAYA GİT"
        android:textColor="@color/white"
        android:textSize="16sp" />


</LinearLayout>